<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.c4.board.notice.NoticeDAO">
  
  <select id="getCount" parameterType="Pager" resultType="Long">
  
  	SELECT COUNT(NUM) FROM NOTICE
  		 WHERE 
  		 <choose>
  		 	<when test="kind == 'num'">
				num
			</when>
			
			<when test="kind == 'title'">
				title
			</when>
			
			<when test="kind == 'contents'">
				contents
			</when>
			
  		 	<otherwise>writer</otherwise>
  		 	
  		 </choose>
  		 
  		 LIKE '%' || #{search} || '%'
  		
  </select>
  
	<select id="getList" parameterType="Pager" resultType="NoticeDTO" >
 		SELECT * FROM
  		(SELECT ROWNUM R, N.* FROM
  		 (SELECT * FROM NOTICE 
  		 
  		 WHERE 
  		 
  		 <choose>
  		<when test="kind == 'num'">
				num
			</when>
			
			<when test="kind == 'title'">
				title
			</when>
			
			<when test="kind == 'contents'">
				contents
			</when>
			
  		 	<otherwise>writer</otherwise>
  		 	
  		 </choose>
  		 
  		 LIKE '%' || #{search} || '%'
  		 
   		ORDER BY NUM DESC) 
   		N)
 		WHERE R BETWEEN #{startRow} AND #{lastRow} 
  
  	</select>
  	
	<select id="getSelect" parameterType="BoardDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}
	
	</select>
  
  	
  	<select id="setInsert" parameterType="BoardDTO" >
  	  INSERT INTO NOTICE(num, title, contents, writer, regDate, hits) 
  	  VALUES(notice_seq.nextval,#{title},#{contents},#{writer}, sysdate, 0)
  	</select>
  	
  	
  	<delete id="setDelete" parameterType="BoardDTO">
  		DELETE NOTICE WHERE NUM= #{num}
  	 </delete>
  	 
  	
  	 
  	 <update id="setUpdate" parameterType="BoardDTO" >
  		UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents}, WRITER=#{writer} WHERE NUM=#{num}
  	</update>
  
  </mapper>
  
 